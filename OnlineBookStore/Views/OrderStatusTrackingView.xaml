<Window x:Class="OnlineBookStore.Views.OrderStatusTrackingView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Order Status Tracking" Height="450" Width="800">
    <Grid Margin="10">
        <Label Content="Order Status Tracking" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" />

        <ListView x:Name="OrderListView" Margin="10,50,10,50" SelectionMode="Single" IsEnabled="True">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Order ID" DisplayMemberBinding="{Binding OrderId}" />
                    <GridViewColumn Header="Order Date" DisplayMemberBinding="{Binding OrderDate}" />
                    <GridViewColumn Header="Status" DisplayMemberBinding="{Binding Status}" />
                </GridView>
            </ListView.View>
        </ListView>

        <Button Content="Cancel Selected Order" Margin="10" VerticalAlignment="Bottom" Click="CancelOrderButton_Click" />
    </Grid>
</Window>
