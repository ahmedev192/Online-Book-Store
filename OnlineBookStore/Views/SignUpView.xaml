<Window x:Class="OnlineBookStore.Views.SignUpView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sign Up" Height="500" Width="400">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
            <Label Content="Username" HorizontalAlignment="Left" />
            <TextBox Name="Username" Width="200" Margin="10" Height="30"/>

            <Label Content="Password" HorizontalAlignment="Left" />
            <PasswordBox Name="Password" Width="200" Margin="10" Height="30"/>

            <Label Content="Address" HorizontalAlignment="Left" />
            <TextBox Name="Address" Width="200" Margin="10" Height="30"/>

            <Label Content="Phone" HorizontalAlignment="Left" />
            <TextBox Name="Phone" Width="200" Margin="10" Height="30"/>

            <Label Content="User Type" HorizontalAlignment="Left" />
            <ComboBox Name="UserType" Width="200" Margin="10" Height="30">
                <ComboBoxItem Content="Customer"/>
                <ComboBoxItem Content="Admin"/>
            </ComboBox>

            <Button Name="SignUpButton" Content="Sign Up" Width="200" Margin="10" Height="35" Click="SignUpButton_Click"/>

            <TextBlock Name="ErrorMessage" Foreground="Red" Visibility="Collapsed" />
        </StackPanel>
    </Grid>
</Window>
